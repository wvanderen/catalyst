<h1><%= @practice.title %></h1>

<div class='row'>
    <div class='col-md-8'>
        <p><%= @practice.description %></p>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_practice_path(@practice), class: 'btn btn-success' %>
        <%= link_to "Delete Practice", @practice, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this practice?'} %>
        <%= link_to "(Add practice button here)", edit_practice_path(@practice), class: 'btn btn-success' %>
    </div>
</div>
    

