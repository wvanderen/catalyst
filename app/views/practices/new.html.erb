
<div class="col-md-8">
 <h1>New Practice</h1>
 <%= form_for @practice do |f| %>
   <%= f.label :title %>
   <%= f.text_field :title,  class: 'form-control', placeholder: "Enter practice title" %>
 
   <%= f.label :description %>
   <%= f.text_area :description,  class: 'form-control', placeholder: "Enter practice description" %>
   
   <%= f.label :experience %>
   <%= f.number_field :experience,  class: 'form-control', placeholder: "Enter practice experience" %>
   
   <%= f.label :duration %>
   <%= f.number_field :duration,  class: 'form-control', placeholder: "Enter practice duration" %>
 
   <%= f.submit "Save" %>
 <% end %>
 </div>